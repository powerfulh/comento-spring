<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.comento.oracleSpringBoot.mail.MailS">
	<select id="getMailInbox" resultType="MailVo" parameterType="string">
		select * from mail where target = #{sid} order BY mailNo desc
	</select>
	<select id="getMailOutBox" resultType="MailVo" parameterType="string">
		select * from mail where writer = #{sid} order BY mailNo desc
	</select>
</mapper>